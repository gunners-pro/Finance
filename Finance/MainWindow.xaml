<Window x:Class="Finance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance"
        xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Background="#eeeeee"
        Title="Finance" Height="720" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Padding="10" Margin="10"
                CornerRadius="10" 
                Background="{StaticResource Green500}" 
                BorderThickness="1" 
                Height="100" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <StackPanel VerticalAlignment="Center">
                        <Label Content="Total Balance" Foreground="White" FontSize="14" />
                        <Label Content="$ 320.845,20" Foreground="White" FontSize="22" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0, 0, 0, 12">
                        <Label Content="15.8%" Foreground="{StaticResource LightGreen500}"/>                        
                        <icons:PackIconBoxIcons 
                            Kind="RegularRightTopArrowCircle" Margin="0,4,0,0"
                            Foreground="{StaticResource LightGreen500}" Width="14" />
                    </StackPanel>
                </StackPanel>
                <Button Content="+ Adicionar" Background="{StaticResource LightGreen600}"
                        Grid.Column="1" Foreground="White"
                        Height="35" BorderThickness="0"
                        Padding="8" />                
            </Grid>
        </Border>

    </Grid>
</Window>
