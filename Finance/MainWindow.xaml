<Window x:Class="Finance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance"
        xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Background="#eeeeee"
        Title="Finance" Height="720" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="250" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Padding="10" Margin="10"
                CornerRadius="10" 
                Background="{StaticResource Green500}" 
                BorderThickness="1" 
                Height="100" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <StackPanel VerticalAlignment="Center">
                        <Label Content="Total Balance" Foreground="White" FontSize="14" />
                        <Label Content="$ 320.845,20" Foreground="White" FontSize="22" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0, 0, 0, 12">
                        <Label Content="15.8%" Foreground="{StaticResource LightGreen500}"/>                        
                        <icons:PackIconBoxIcons 
                            Kind="RegularRightTopArrowCircle" Margin="0,4,0,0"
                            Foreground="{StaticResource LightGreen500}" Width="14" />
                    </StackPanel>
                </StackPanel>
                <Button Content="+ Adicionar" Background="{StaticResource LightGreen600}"
                        Grid.Column="1" Foreground="White"
                        Height="35" BorderThickness="0"
                        Padding="8" />                
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" Padding="10" Margin="10,0" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label>Gráficos</Label>
                </StackPanel>
                <Border Height="180" Grid.Column="1" Background="Gray"/>
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 14">
                        <icons:PackIconBoxIcons 
                            Kind="RegularLeftDownArrowCircle" 
                            Width="24" Height="24" Margin="14" Foreground="Green"
                            VerticalAlignment="Center" />
                        <StackPanel>
                            <Label FontSize="16">Entradas</Label>
                            <Label FontSize="22">$12.378,20</Label>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <icons:PackIconBoxIcons 
                            Kind="RegularRightTopArrowCircle" 
                            Width="24" Height="24" Margin="14" Foreground="Red"
                            VerticalAlignment="Center" />
                        <StackPanel>
                            <Label FontSize="16">Saídas</Label>
                            <Label FontSize="22">$15.788,21</Label>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
            </Grid>
        </Border>
        <Border Grid.Row="2" Background="White" Padding="10" Margin="10" CornerRadius="10">
            <Label>Tabela</Label>
        </Border>
    </Grid>
</Window>
