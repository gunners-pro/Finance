<Application x:Class="Finance.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Finance"
             StartupUri="Pages/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="/Resources/Styles/CustomTextBoxStyle.xaml" />
                <ResourceDictionary Source="/Resources/Styles/CustomComboBoxStyle.xaml" />
                <ResourceDictionary Source="/Resources/Styles/CustomDatePickerStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Helvetica" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Helvetica" />
            </Style>

        </ResourceDictionary>     
    </Application.Resources>
</Application>
